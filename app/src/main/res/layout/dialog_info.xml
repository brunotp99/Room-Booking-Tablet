<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/border_radius">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/information"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informação"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24sp"
        android:textColor="@color/black_smooth"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/txtMotivacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textSize="18dp"
        android:text="Atenção, ao desativar a sala, todas as reservas associadas a mesma serão removidas!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialogAceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/modern_button"
            android:fontFamily="@font/poppins"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            app:backgroundTint="@color/danger_bg"
            app:icon="@drawable/ic_baseline_check_24" />

        <Button
            android:id="@+id/dialogCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/modern_button"
            android:fontFamily="@font/poppins"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:backgroundTint="@color/black_smooth"
            app:icon="@drawable/ic_close" />

    </LinearLayout>

</LinearLayout>